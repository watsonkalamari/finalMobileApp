<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Search Page Styles ************************************************************ -->

    <style name="SearchButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:text">@string/search_button</item>
        <item name="android:textSize">@dimen/mlarge_text_size</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="SearchResult_Name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_mxlarge</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:text">Chicken Spaghetti</item>
        <item name="android:textSize">@dimen/mxlarge_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchResult_Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/lorem_ipsum</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">@dimen/medeium_text_size</item>
    </style>


</resources>